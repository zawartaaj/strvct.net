{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [

        //             "program": "${workspaceFolder}/source/boot/index-builder/buildindex.js"

        {
            "label": "create index.html",
            "type": "shell",
            "command": "node",
            "args": [
                "./source/boot/index-builder/buildindex.js"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },

        {
            "label": "remove index.html",
            "type": "shell",
            "command": "rm",
            "args": [
                "index.html"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },

        {
            "label": "Run local node HTTPS server",
            "type": "shell",
            "command": "node",
            "args": [
                "server.js"
            ],
            "options": {
                "cwd": "${workspaceRoot}/LocalWebServer",
                "_runner": "terminal",
                "isBackground": "true",
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": [],
        }

        /*
        {
            "label": "Run Server",
            "dependsOn": [
                "CleanUp_Client",
                "Client_Build"
            ]
        },
        */
    ]
}